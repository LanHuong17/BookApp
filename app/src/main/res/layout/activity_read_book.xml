<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadBookActivity">

    <RelativeLayout
        android:id="@+id/toolbar1"
        android:background="@drawable/shape_toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <TextView
            android:id="@+id/tvTitleChapter"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Chapter"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvSubTitle"
            android:textColor="@color/white"
            android:layout_below="@+id/tvTitleChapter"
            android:text="NA/NA"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:textSize="13sp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/backBtn"
            android:src="@drawable/back_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"/>
<!--        <ImageButton-->
<!--            android:id="@+id/moreBtn"-->
<!--            android:src="@drawable/expand_gray"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginEnd="10dp"-->
<!--            android:background="@android:color/transparent"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:layout_alignParentEnd="true"/>-->
<!--        <Spinner-->
<!--            android:id="@+id/spChapter"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:background="@drawable/expand_gray"-->
<!--            android:layout_marginEnd="20dp"-->
<!--            android:layout_alignParentEnd="true"/>-->

    </RelativeLayout>

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar1"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/downloadBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/download_black"
        android:backgroundTint="@color/white"
        app:fabCustomSize="50dp" />


</RelativeLayout>